<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".ui.ScoreBoardActivity">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_alignParentTop="true"
                  android:minHeight="50dp"
                  android:background="@color/colorPrimary"
                  android:id="@+id/lytScoreDetail"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyuncu Adı"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.85"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyun Türü"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_weight="1"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyun Büyüklüğü"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_weight="0.9"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puan"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_weight="1.1"
        />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytScoreDetail"
            android:id="@+id/recyclerScoreBoard"
    >

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>